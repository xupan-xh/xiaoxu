/* pages/comlist/comtlist.wxss */
.comment-list{
  padding-top: 30rpx;
  margin-bottom: 100rpx;
  display: flex;
  flex-direction: column;
}
.comment-item {
  background-color: #ffffff;
  border-bottom: 5rpx solid #f5f5f5;
  padding: 40rpx 70rpx;
}

.comment-empty{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
  line-height: 49rpx;
  opacity: 0.5;
}

.comment-item:last-child {
  border-bottom: 0rpx;
}
.comment-info {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.user-avatar {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
}
.comment-username {
  padding-left: 40rpx;
  font-size: 35rpx;
  line-height: 49rpx;
}

.comment-createtime {
  font-size: 28rpx;
  line-height: 40rpx;
  padding-left: 40rpx;
  opacity: 0.7;
}

.comment-content {
  margin-top: 30rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  height: 42rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.voice-wrapper {
  border: 1rpx solid #9e9e9e;
  text-align: center;
  display: flex;
  width: 300rpx;
  height: 60rpx;
  background-color: #f5f5f5;
  justify-content: flex-start;
  align-items: center;
  border-radius: 8rpx;
  margin: 20rpx auto 0;
}
.voice-image {
  margin-left: 20rpx;
  height: 40rpx;
  width: 40rpx;
}
.voice-duration {
  margin-left: 20rpx;
  font-size: 32rpx;
  line-height: 42rpx;
}


.bottom-btn-wrapper{
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 100rpx;
}

.bottom-btn{
  text-align: center;
  border-radius: 0rpx;
  width: 100%;
  font-size: 35rpx;
  line-height: 100rpx;
  background: #FFDE55;
  height: 100rpx;
}

.bottom-btn::after {
  border: none;
}