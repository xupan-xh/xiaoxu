/* pages/comedit/comedit.wxss */

.movie-wrapper {
  padding: 12% 50rpx 5%;
}

.movie-detail {
  background-color: #fff;
  border: 2rpx solid #bdbdbd;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.movie-image {
  height: 300rpx;
  width: 200rpx;
  margin-top: -60rpx;
}

.movie-title {
  font-size: 40rpx;
  line-height: 56rpx;
  font-weight: bold;
  margin-top: 40rpx;
}

.com-wrapper {
  width: 80%;
  padding: 5% 10%;
}

.com-wrapper textarea {
  width: 100%;
  display: inline-block; 
  margin-top: 50rpx;
  font-size: 35rpx;
  line-height: 49rpx;
  min-height: 400rpx;
  margin-right: 5%;
  border: 1rpx solid #eeeeee;
}

.com-content{
  width: 100%;
  display: inline-block;
  margin-top: 50rpx;
  font-size: 35rpx;
  line-height: 49rpx;
  min-height: 400rpx;
  margin-right: 5%;
  margin-bottom: 42rpx;
}

.word-num{
  float: right;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.6;
}

.bottom-btn-wrapper{
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 100rpx;
}

.bottom-btn{
  text-align: center;
  border-radius: 0rpx;
  width: 100%;
  font-size: 35rpx;
  line-height: 100rpx;
  background: #FFDE55;
  height: 100rpx;
}

.bottom-btn::after {
  border: none;
}

.bottom-btn[disabled]{
  background: #FFDE55!important;
  color: #000 !important;
  opacity: 0.7 !important;
}

.bottom-btn-last{
  width: 50%;
  height: 100%;
  border-radius: 0rpx;
  font-size: 35rpx;
  line-height: 100rpx;
  background: #FFDE55;
}

.re-edit{
  background: rgba(255,222,85,0.7);
}

.bottom-btn-last::after {
  border: none;
}

.voice-container {
  margin: 40rpx auto;
  border: 1rpx solid #9e9e9e;
  text-align: center;
  display: flex;
  width: 350rpx;
  height: 80rpx;
  justify-content: center;
  align-items: center;
  border-radius: 8rpx;
  background-color: #F5F5F5;
}

.voice-preview{
  margin: 122rpx auto;
}

.voice-image{
  height: 60rpx;
  width: 60rpx;
}

.duration{
  margin-left: 20rpx;
  font-size: 30rpx;
  line-height: 42rpx;
}

.visible {
  visibility: visible;
}
.disvisible {
  visibility: hidden;
}

.rec-container {
  margin: 80rpx auto 40rpx;
  height: 80rpx;
  width: 350rpx;
  border: 1rpx solid #9e9e9e;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.rec-icon {
  height: 60rpx;
  width: 60rpx;
}

.recording {
  background-color: #FFDE55;
  color: #ffffff;
}

.rec-text {
  padding-left: 20rpx;
  font-size: 35rpx;
  line-height: 80rpx;
}


