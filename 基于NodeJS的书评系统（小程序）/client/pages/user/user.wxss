/* pages/user/user.wxss */

.page-tab {
  margin: 30rpx auto;
  display: flex;
  justify-content: space-around;
  font-size: 35rpx;
  line-height: 49rpx;
}

.checked-title {
  color: #FFDE55;
  font-weight: bold;
}
.unchecked-title {
  opacity: 0.7;
  font-weight: normal;
}

.movie-wrapper{
  padding: 10rpx 60rpx;
  position: relative;
}

.movie-empty{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
  line-height: 49rpx;
  opacity: 0.5;
}

.movie-item{
  height: 300rpx;
  width: 100%;
  border-radius: 2rpx; 
  border: 1rpx solid #DCDCDC;
  box-shadow: 8rpx 8rpx 12rpx rgba(150, 150, 150, 0.664);
  /* position: relative; */
  margin-bottom: 50rpx;
  background-color: #ffffff;
  display: flex;
}

.movie-img{
  height: 300rpx;
  width: 200rpx;
  box-shadow: 0rpx 8rpx 12rpx rgba(150, 150, 150, 0.664);
}

.movie-info{
  padding: 30rpx;
}

.movie-title{
  font-size: 35rpx;
  line-height: 49rpx;
  font-weight: bold;
  margin-top: 10rpx;
  margin-bottom: 15rpx;
}

.movie-content{
  font-size: 32rpx;
  line-height: 46rpx;
  opacity: 0.8;
  max-width: 380rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.no-more{
  text-align: center;
  font-size: 30rpx;
  opacity: 0.5;
  margin-bottom: 120rpx;
}

.user-info{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 30rpx;
  width: 380rpx;
  /* margin-left: 10rpx; */
}

.user-avatar{
  height: 60rpx;
  width: 60rpx;
  border-radius: 30rpx;
  overflow: hidden;
}

.user_name{
  font-size: 32rpx;
  padding-left: 20rpx;
  opacity: 0.8;
}

.comment-content{
  min-height: 70rpx;
}

.voice-wrapper {
  border: 1rpx solid #9e9e9e;
  text-align: center;
  display: flex;
  width: 300rpx;
  height: 60rpx;
  background-color: #f5f5f5;
  justify-content: flex-start;
  align-items: center;
  border-radius: 8rpx;
  margin: 35rpx 0 0;
}
.voice-image {
  margin-left: 20rpx;
  height: 40rpx;
  width: 40rpx;
}
.voice-duration {
  margin-left: 20rpx;
  font-size: 32rpx;
  line-height: 42rpx;
}

.bottom-btn-wrapper{
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 100rpx;
}

.bottom-btn{
  text-align: center;
  border-radius: 0rpx;
  width: 100%;
  font-size: 35rpx;
  line-height: 100rpx;
  background: #FFDE55;
  height: 100rpx;
}

.bottom-btn::after {
  border: none;
}
